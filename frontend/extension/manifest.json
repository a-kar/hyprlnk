{
  "manifest_version": 3,
  "name": "HyprLnk - Smart Bookmarks",
  "version": "1.0.0",
  "description": "AI-powered bookmark management with intelligent organization and session recovery",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "contextMenus",
    "history",
    "idle",
    "webNavigation"
  ],
  "host_permissions": [
    "http://localhost:4381/*",
    "http://*/*",
    "https://*/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:4381/*"]
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:4381/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["link-tracker.js"],
      "run_at": "document_end",
      "exclude_matches": ["http://localhost:4381/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "HyprLnk - Save & Organize"
  }
}